# Database Auth
POSTGRES_AUTH_HOST=postgres-auth
POSTGRES_AUTH_PORT=5432
POSTGRES_AUTH_USER=auth_user
POSTGRES_AUTH_PASSWORD=auth_password
POSTGRES_AUTH_DB=auth_db

# Database Notes
POSTGRES_NOTES_HOST=postgres-notes
POSTGRES_NOTES_PORT=5433
POSTGRES_NOTES_USER=notes_user
POSTGRES_NOTES_PASSWORD=notes_password
POSTGRES_NOTES_DB=notes_db

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password
REDIS_DB=0
REDIS_POOL_SIZE=10

# Services
AUTH_SERVICE_HOST=auth-service
AUTH_SERVICE_PORT=8081
NOTES_SERVICE_HOST=notes-service
NOTES_SERVICE_PORT=8082

# API Gateway
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_READ_TIMEOUT=10s
SERVER_WRITE_TIMEOUT=10s
SERVER_IDLE_TIMEOUT=30s
SERVER_ENABLE_COMPRESSION=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Shutdown
SHUTDOWN_TIMEOUT=5s

# Resilience - Circuit Breaker
RESILIENCE_CB_MAX_REQUESTS=100
RESILIENCE_CB_INTERVAL=10s
RESILIENCE_CB_TIMEOUT=60s
RESILIENCE_CB_READY_TO_TRIP=0.5

# Resilience - Retry
RESILIENCE_RETRY_MAX_ATTEMPTS=3
RESILIENCE_RETRY_BACKOFF_FACTOR=2
RESILIENCE_RETRY_INITIAL_TIMEOUT=100ms
RESILIENCE_RETRY_MAX_TIMEOUT=1s

# Resilience - Rate Limit
RESILIENCE_RATE_REQUESTS_PER_SECOND=100
RESILIENCE_RATE_BURST=50